<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invitacionCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">
            <LinearLayout
                android:id="@+id/linearInvitacion1InvitacionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                >
                <TextView
                    android:id="@+id/textoInvitacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Deseas unirte a:"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/purple_500"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearInvitacion2InvitacionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_below="@id/linearInvitacion1InvitacionCard"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                >

                <TextView
                    android:id="@+id/invitacionNombreRemitente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:text="NOMBRE DE QUIEN LO MANDAa"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearInvitacion3InvitacionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_below="@id/linearInvitacion2InvitacionCard"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/aceptarInitacion"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/baseline_check_24"
                    app:tint="@color/purple_700"
                     />
                <ImageView
                    android:id="@+id/borrarInvitacaion"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/baseline_close_24"
                    app:tint="@color/purple_700"
                    />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>